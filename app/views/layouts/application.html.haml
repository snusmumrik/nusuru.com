!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "ヌスルー情報局 沖縄の#{@description} 盗難車情報サイトです。", :name => "description"}/
    %meta{:content => "ヌスルー情報局,#{@keywords},沖縄,盗難車,掲示板", :name => "keywords"}/
    %meta{:content => "", :name => "author"}/
    %link{:href => "", :rel => "shortcut icon"}/
    %title
      ヌスルー情報局 #{@description}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %a.navbar-brand{"data-no-turbolink" => "true", :href => "/"} ヌスルー情報局
          %button.navbar-toggle{"data-target" => "#navbar-main", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        #navbar-main.navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li
              %a{"data-no-turbolink" => "true", :href => "/"} 沖縄の盗難車情報サイト
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{:href => "/rules"}
                %span.glyphicon.glyphicon-exclamation-sign{"aria-hidden" => "true"}>
                ルール・免責事項
            %li
              %a{:href => "/faq"}
                %span.glyphicon.glyphicon-question-sign{"aria-hidden" => "true"}>
                よくある質問
            - if user_signed_in?
              %li= link_to '<span class="glyphicon glyphicon-user" aria-hidden="true"></span>'.html_safe + controller.current_user.name, "/user"
              %li= link_to '<span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>'.html_safe + t("links.user.sign_out"), destroy_user_session_path, :method => :delete, data: { confirm: t("messages.sign_out") }
            - else
              %li= link_to '<span class="glyphicon glyphicon-home" aria-hidden="true"></span>'.html_safe + t("links.user.sign_in"), new_user_session_path
    %div
      - if notice
        .alert.alert-success
          %p#notice= notice
      - if alert
        .alert.alert-error
          %p#alert= alert
    .jumbotron
      %header.center
        %h1
          %a{"data-no-turbolink" => "true", :href => "/"}
            %img{:alt => "ヌスルー情報局", :src => "/logo.png"}/
      .main-content
        = yield
    %footer
      %div
        ©#{Date.today.year}
        %a{"data-no-turbolink" => "true", :href => "/"} ヌスルー情報局 nusuru.com
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-40534755-9', 'auto');
      ga('send', 'pageview');
